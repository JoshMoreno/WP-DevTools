{% comment %}
Takes a method and returns a string formatted as:
functionName( argType $argName [, argType $optionalArgName = argDefaultValue] )
{% endcomment %}

{% capture args %}
	{% for arg in method.args %}
		{% if arg.default and hasOptional != true %}
			[
			{% assign hasOptional = true %}
		{% endif %}
			, {{ arg.type }}
			<code>${{ arg.name }}</code>
			{% if arg.default %}
				= {{ arg.default }}
			{% endif %}
			{% if forloop.last and hasOptional %}
				]
				{% assign hasOptional = false %}
			{% endif %}
	{% endfor %}
{% endcapture %}

{% if include.method.static == true %}
	::{{ include.method.name }}( {{ args | replace_first: ', ', '' | strip_newlines }} )
{% else %}
	{{ include.method.name }}( {{ args | replace_first: ', ', '' | strip_newlines }} )
{% endif %}
