{
    "autoload": {
        "psr-4": {
            "WPDev\\": "inc/"
        }
    },
    "autoload-dev": {
        "psr-4": { "WPDev\\": "cli/" }
    },
    "require": {
        "filp/whoops": "^2.1",
        "symfony/var-dumper": "^4.0",
        "cocur/slugify": "^3.0",
        "brain/hierarchy": "^2.3",
        "symfony/finder": "^4.0",
        "symfony/console": "^4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "guzzlehttp/guzzle": "^6.3",
        "symfony/filesystem": "^4.0",
        "10up/wp_mock": "0.3.0"
    },
    "scripts": {
        "test": "composer unit-test && composer integration-test",
        "integration-test": "phpunit --bootstrap=tests/integration-bootstrap.php --color=always --verbose tests/integration",
        "unit-test": "phpunit --bootstrap=tests/unit-bootstrap.php --color=always --verbose tests/unit"
    }
}
